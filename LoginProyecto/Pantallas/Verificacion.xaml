<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginProyecto.Pantallas.Verificacion"
             Title="Verificar cuenta"
             BackgroundColor="Gray">
    <ContentPage.Content>
        <StackLayout Margin="0,250,0,0">
            <Label Text="Ingrese el codigo de verificacion" TextColor="black" BackgroundColor="Transparent" HorizontalOptions="Center" FontSize="Medium" TextDecorations="Underline"></Label>
            <Entry x:Name="txtcodigo" Placeholder="Ingrese el codigo de verificacion" TextColor="Black" PlaceholderColor="lightgray" MaxLength="7" Keyboard="Text" Margin="55,7,80,0" FontSize="14"></Entry>
            <Button x:Name="btnverificar" Text="Verificar codigo" Clicked="btnverificar_Clicked" HorizontalOptions="Center" TextColor="black" BackgroundColor="white" Margin="20,5,20,0"></Button>
            <Button x:Name="btnotrocodigo" Text="Mandar otro codigo" Clicked="btnotrocodigo_Clicked" HorizontalOptions="Center" TextColor="black" BackgroundColor="white" Margin="20,5,20,0"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>