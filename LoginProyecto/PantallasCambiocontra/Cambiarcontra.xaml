<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginProyecto.PantallasCambiocontra.Cambiarcontra"
             Title="Cambiar password"
             BackgroundColor="Gray">
    <ContentPage.Content>
        <StackLayout Margin="0,40,0,0">
            <Label Text="Cambiar Contraseña" TextColor="DarkRed" HorizontalOptions="CenterAndExpand" FontSize="20"></Label>
           
            <Label Text="Ingrese Su nueva contraseña" TextColor="black" HorizontalOptions="FillAndExpand" FontSize="18" BackgroundColor="Transparent" Margin="10,2,1,0"></Label>
            <Entry x:Name="txtnuevaclave" TextColor="black" BackgroundColor="LightGray" FontSize="Medium" Placeholder="Ingrese su nueva contraseña" PlaceholderColor="Gray" Keyboard="Email" MaxLength="150" Margin="9,2,20,0"></Entry>
            <Button x:Name="btncambiar" Text="Cambiar contraseña" TextColor="black" BackgroundColor="White" FontSize="14" Margin="10,20,20,10" HorizontalOptions="Center" Clicked="btncambiar_Clicked"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>