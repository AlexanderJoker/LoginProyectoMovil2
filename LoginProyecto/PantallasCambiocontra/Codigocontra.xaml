<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LoginProyecto.PantallasCambiocontra.Codigocontra"
             Title="Codigo para cambiar password"
             BackgroundColor="Gray">
    <ContentPage.Content>
        <StackLayout Margin="0,200,0,0">
            <Label x:Name="lblcorreo" Text="Ingrese el codigo enviado al correo" TextColor="Black" FontSize="18" HorizontalOptions="Center" ></Label>
            <Entry x:Name="txtcodigo" BackgroundColor="Gray" Placeholder="Ingrese clave" PlaceholderColor="LightGray" TextColor="Black" FontSize="14" Margin="90,2,90,0"></Entry>
            <Button x:Name="btncambiarclave" Text="Verificar" TextColor="Black" BackgroundColor="white" HorizontalOptions="Center" Clicked="btncambiarclave_Clicked" Margin="0,10,0,0" BorderColor="Black"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>